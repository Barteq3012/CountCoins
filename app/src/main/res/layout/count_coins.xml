<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".CountCoinsFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountCoinsFragment">

    <TextView
        android:id="@+id/text_display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/rect_layout"
        android:layout_above="@id/sliders_layout"
        android:scrollbars="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/n_coins"
        android:textSize="20sp" />


    <GridLayout
        android:id="@+id/sliders_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons_layout"
        android:columnCount="2"
        android:rowCount="4"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"

        >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Gradient: 50" />

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:max="100"
            android:progress="50"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Max size: 50" />

        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:max="100"
            android:progress="50"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Threshold: 50" />

        <SeekBar
            android:id="@+id/seekBar3"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:max="100"
            android:progress="50"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text="Min size: 0" />

        <SeekBar
            android:id="@+id/seekBar4"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:max="100"
            android:progress="0"
            android:layout_column="1" />





    </GridLayout>





    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom"
        >


        <Button
            android:id="@+id/countCoinsButtonId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/profile_default_tint"
            android:text="@string/count_coins"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/captureImageButtonId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/profile_default_tint"
            android:text="@string/capture_image"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rect_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tool_bar_dimen"

        >

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/outline_image_black_48"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"

            tools:ignore="MissingConstraints" />

    </android.support.constraint.ConstraintLayout>


</RelativeLayout>

</android.support.design.widget.CoordinatorLayout>